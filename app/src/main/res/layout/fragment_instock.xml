                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/title_view_all"/>
            </RelativeLayout>
            <LinearLayout
